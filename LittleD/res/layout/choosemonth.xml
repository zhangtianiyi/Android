<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:id="@+id/bottom_choosemonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            
    <ImageView
          android:id="@+id/image_feb"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/febmonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_mar"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/marmonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_apr"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/aprmonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_may"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/maymonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_jun"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/junmonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_jul"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/julmonth"
          android:clickable = "true"
        />
    <ImageView
          android:id="@+id/image_aug"
          android:layout_height="20dip"
          android:layout_width="wrap_content"
          android:layout_weight="1"
          android:src="@drawable/augmonth"
          android:clickable = "true"
        />
</LinearLayout>
